include, plotscr.hsd
include, Time Travel.hsi

plotscript, Change to Female, begin
	add hero (1)
	delete hero (0)
	delete hero (3)
	delete hero (1)
	swap by position (3, 4)
	set tag (2, true)
end

plotscript, tell time, begin
	show text box (2)
end

plotscript, Change to Male, begin
	add hero (3)
	delete hero (0)
	delete hero (1)
	delete hero (3)
	swap by position (3, 4)
	set tag (2, true)
end